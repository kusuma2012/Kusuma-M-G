drop database if exists payroll;

create database payroll;

use payroll;

CREATE TABLE EMPLOY
(
EMP_NO INT AUTO_INCREMENT PRIMARY KEY,
EMP_NAME varchar(50) NOT NULL,
EMP_SALARY Double NOT NULL,
EMP_GENDER ENUM('MALE','FEMALE'),
EMP_HRA double NOT NULL,
EMP_DA double NOT NULL,
EMP_TA Double NOT NULL,
EMP_TAX double NOT NULL,
EMP_PF double NOT NULL,
EMP_GROSS double NOT NULL,
EMP_NETPAY double NOT NULL,
EMP_LEAVE_AVAIL int NOT NULL);



CREATE TABLE EMPLOY_LEAVE
(
LEAVE_ID INT PRIMARY KEY AUTO_INCREMENT,
EMP_NO INT,
LEAVE_START_DATE DATE NOT NULL,
LEAVE_END_DATE DATE NOT NULL,
NO_OF_DAYS INT,
LEAVE_REASON CHAR(50) NOT NULL,
LOSS_OF_PAY double NOT NULL,
FOREIGN KEY(EMP_NO) REFERENCES EMPLOY(EMP_NO)
);
